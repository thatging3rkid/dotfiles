{
    "*.xml": {
        "tabsize": 2
    },

    "autoclose": true,
    "autoindent": true,
    "autosave": 0,
    "autosu": true,
    "backup": true,
    "basename": true,
    "colorcolumn": 0,
    "colorscheme": "monokai",
    "comment": true,
    "cursorline": true,
    "diff": true,
    "diffgutter": false,
    "encoding": "utf-8",
    "eofnewline": false,
    "fastdirty": true,
    "fileformat": "unix",
    "filetype": "unknown",
    "ftoptions": true,
    "ignorecase": false,
    "indentchar": " ",
    "infobar": true,
    "keepautoindent": false,
    "keymenu": false,
    "linter": false,
    "literate": true,
    "matchbrace": true,
    "mkparents": true,
    "mouse": true,
    "paste": false,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "readonly": false,
    "rmtrailingws": false,
    "ruler": true,
    "savecursor": true,
    "savehistory": true,
    "saveundo": false,
    "scrollbar": false,
    "scrollmargin": 2,
    "scrollspeed": 2,
    "smartpaste": true,
    "softwrap": false,
    "splitbottom": true,
    "splitright": true,
    "status": true,
    "statusformatl": "$(filename):$(line):$(col) ($(opt:fileformat),$(opt:encoding))",
    "statusformatr": "$(modified)$(status.paste) ft:$(opt:filetype) ",
    "statusline": true,
    "sucmd": "sudo",
    "syntax": true,
    "tabmovement": false,
    "tabsize": 4,
    "tabstospaces": true,
    "useprimary": true
}
