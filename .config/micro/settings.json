{
    "*.py": {
        "tabstospaces": true
    },
    "*.xml": {
        "tabsize": 2
    },
    "*.{c,h,cpp,hpp}": {
        "tabstospaces": true
    },
    "autoclose": true,
    "autoindent": true,
    "autosave": false,
    "basename": false,
    "colorcolumn": 0,
    "colorscheme": "default",
